<h1>Listing talks</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Description</th>
    <th>Submitted by</th>
    <th>Slides link</th>
    <th>Given on</th>
  </tr>

<% @talks.each do |talk| %>
  <tr>
    <td><%=h talk.subject %></td>
    <td><%=h talk.description %></td>
    <td><%=h talk.submitted_by %></td>
    <td><%=h talk.slides_link %></td>
    <td><%=h talk.given_on %></td>
    <td><%= link_to 'Show', talk %></td>
    <td><%= link_to 'Edit', edit_talk_path(talk) %></td>
    <td><%= link_to 'Destroy', talk, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New talk', new_talk_path %>